<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Administrator">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/yellowEditText"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:foregroundGravity="center"
                app:cardCornerRadius="160dp"
                app:cardElevation="16dp">

                <ImageView
                    android:id="@+id/imageAdminSession"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_account_circle_24" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/nameAdminSession"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Nombre Usuario"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/logInAdmin"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Iniciar sesiÃ³n"
                android:textColor="@color/links" />
            <ImageView
                android:id="@+id/notificationsIMAdmin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_notifications_24"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:backgroundTint="@color/grey"
                />
            <ImageView
                android:id="@+id/settingsIMAdmin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_settings_24"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/grey"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>